#!/bin/sh

case "$(playerctl -l)" in
  spotify|google-play-music-desktop-player)
    playerctl play-pause
    ;;
esac

if [ "$(playerctl -l)" == "clementine" ]; then
  case "$(playerctl status)" in
    Playing)
      playerctl stop
      ;;
    Stopped)
      playerctl play
      ;;
  esac
fi

if [ -n "$(pidof pianobar)" ]; then
  echo -n 'p' > ~/.config/pianobar/ctl
  exit
fi

if [ -n "$(pidof mplayer)" ]; then
  echo 'pause' > /tmp/mplayer
  exit
fi
